.container{
	display: flex;
	flex-direction: column;
}
.head-img{
	width: 100%;
	height: 450rpx;
}
.author-date{
	flex-direction: row;
	margin-left: 30rpx;
	margin-top:20rpx; 
}
.avater{
	width: 64rpx;
	height: 64rpx;
	vertical-align: middle;
}
.author{
	font-size: 35rpx;
	font-weight: 300;
	margin-left: 20rpx;
	vertical-align: middle;
	color: #666;
}
.const-text{
	font-size: 24rpx;
	margin-left: 20rpx;
	color: #999;
}
.date{
	font-size: 24rpx;
	margin-left: 30rpx;
	vertical-align: middle;
	color: #999;
}
.title{
	font-size: 36rpx;
	font-weight: 700;
	margin-left: 40rpx;
	margin-top: 30rpx;
