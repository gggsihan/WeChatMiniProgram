}
.tool{
	margin-top: 20rpx;
}
.circle-img{
	float: right;
	margin-right: 40rpx;
	vertical-align: middle;
}
.circle-img image{
	width: 90rpx;
	height: 90rpx;
}
.share-img{
	margin-left: 30rpx;
}
.horizon{
	width:660rpx;
	height: 1px;
	background-color: #e5e5e5;
	vertical-align: middle;
	position: relative;
	z-index: -99;
	top: 46rpx;
	margin:0 auto;
}
.detail{
	margin-left: 30rpx;
	margin-right: 30rpx;
	margin-top: 20rpx;
	color: #666;
	line-height: 44rpx;
	letter-spacing: 2px;
}
.music{
	width: 102rpx;
	height: 110rpx;
	position: absolute;
	left: 50%;
